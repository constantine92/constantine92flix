<%= form_for([@movie, @review]) do |f| %>
  
  <%= render "shared/errors", object: @review %>
  <fieldset>
    <ol>
      <li class="required">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, size: 40, cols: 40, rows: 7 %>
      </li>
      <li class="required">
        <%= f.label :stars %>
        <%= f.select :stars, Review::STARS, prompt: "Pick one"  %>
      </li>
      <li class="required">
        <%= f.label :comment %>
        <%= f.text_area :comment , cols: 70, rows: 10%>
      </li>
    </ol>
    <p>
      <%= f.submit  %>
      <%= link_to "Cancel", movie_path(@movie), class: 'button' %>
    </p>
  </fieldset>
<% end %>
